package concurrencia;

/**
 *
 * @author T-107
 */
public class SegundoThread extends Thread  {
     public void run()
    {
        while(true){
        try 
        {
           
            Thread.sleep(2000);
        System.out.println("Yo soy el  segundo Tread 7v7");
}
        //nunca se lanza
        catch(InterruptedException e){}
    
    }
        }
    
}
